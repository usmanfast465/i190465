<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".emailver"
    android:orientation="vertical">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Enter the code sent to your email"
        android:fontFamily="sans-serif-black"
        android:textSize="24dp"
        android:background="#FFFFFF"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend code in 23s"
        android:textColor="#FFA500"
        android:background="#FFFFFF"/>

    <LinearLayout
        android:id="@+id/otpBoxLayout"
        android:background="#FFFFFF"
        android:foregroundTint="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/otpBox1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#c8c8c8"
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/otpBox2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#c8c8c8"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/otpBox3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#c8c8c8"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/otpBox4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#c8c8c8"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/otpBox5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#c8c8c8"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>


    <GridLayout
        android:id="@+id/keypadGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otpBoxLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:columnCount="3"
        android:rowCount="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/keypad1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="1"
            android:textSize="24sp"
            android:background="#EFEFEF"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/keypad2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="2"
            android:textSize="24sp"
            android:background="#EFEFEF"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/keypad3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="3"
            android:textSize="24sp"
            android:background="#EFEFEF"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/keypad4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="4"
            android:textSize="24sp"
            android:background="#EFEFEF"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/keypad5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="5"
            android:textSize="24sp"
            android:background="#EFEFEF"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/keypad6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="6"
            android:textSize="24sp"
            android:background="#EFEFEF"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/keypad7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="7"
            android:textSize="24sp"
            android:background="#EFEFEF"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/keypad8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="8"
            android:textSize="24sp"
            android:background="#EFEFEF"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/keypad9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="9"
            android:textSize="24sp"
            android:background="#EFEFEF"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/keypadEMPTY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text=" "
            android:textSize="24sp"
            android:background="#EFEFEF"
            android:layout_gravity="end" />

        <Button
            android:id="@+id/keypad0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="0"
            android:textSize="24sp"
            android:background="#EFEFEF"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/backspaceButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="âŒ«"
            android:textSize="24sp"
            android:background="#EFEFEF"
            android:layout_gravity="fill" />

    </GridLayout>
</LinearLayout>